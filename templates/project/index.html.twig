{% extends 'home/index.html.twig' %}
{% block title %}{{ title }}{% endblock %}

{% block body %}
    {% block header %}{{ parent() }}{% endblock %}
    {% block content %}
        <main class="container-fluid">
            <section class="works" id="sectionWorks" style="margin-top: 8rem;">
                <div class="works__heading worksHeading">
                    <h2 class="heading__title mt-xl-5">My <span class="title__accent">Works</span></h2>
                </div>
                <div class="container">
                    <div class="section__box works_box">
                        <div class="mockup w-75 h-75">
                            <img src="{{ asset('assets/images/macFront.png') }}" alt="iMac" class="mockup__img">
                            <div class="link__image">
                                <img src="{{ asset('assets/images/site-img.png') }}" alt="" style="width: 100%; height: 100%">
                                <a href="{{ path('project') }}" class="works__link"></a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>
    {% endblock %}
    {% block footer %}{{ parent() }}{% endblock %}
{% endblock %}
